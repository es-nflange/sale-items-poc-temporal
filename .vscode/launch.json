{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Launch Python File",
            "program": "${workspaceFolder}/${input:pythonFile}"
        }
    ],
    "inputs": [
        {
            "id": "pythonFile",
            "type": "pickString",
            "description": "Select the Python file to debug",
            "options": [
                "starter.py",
                "worker.py",
                "workflows.py",
                "activities.py"
            ]
        }
    ]
}